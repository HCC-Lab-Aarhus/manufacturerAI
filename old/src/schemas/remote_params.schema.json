{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RemoteParams",
  "type": "object",
  "required": ["remote", "buttons"],
  "properties": {
    "remote": {
      "type": "object",
      "required": ["length_mm", "width_mm", "thickness_mm", "wall_mm", "corner_radius_mm"],
      "properties": {
        "length_mm": {"type": "number", "minimum": 80, "maximum": 240},
        "width_mm": {"type": "number", "minimum": 25, "maximum": 70},
        "thickness_mm": {"type": "number", "minimum": 10, "maximum": 35},
        "wall_mm": {"type": "number", "minimum": 1.2, "maximum": 4.0},
        "corner_radius_mm": {"type": "number", "minimum": 0, "maximum": 15}
      }
    },
    "buttons": {
      "type": "object",
      "required": ["rows", "cols", "diam_mm", "spacing_mm", "margin_top_mm", "margin_bottom_mm", "margin_side_mm", "hole_clearance_mm"],
      "properties": {
        "rows": {"type": "integer", "minimum": 1, "maximum": 12},
        "cols": {"type": "integer", "minimum": 1, "maximum": 8},
        "diam_mm": {"type": "number", "minimum": 5.0, "maximum": 18.0},
        "spacing_mm": {"type": "number", "minimum": 1.0, "maximum": 10.0},
        "margin_top_mm": {"type": "number", "minimum": 5.0, "maximum": 80.0},
        "margin_bottom_mm": {"type": "number", "minimum": 5.0, "maximum": 80.0},
        "margin_side_mm": {"type": "number", "minimum": 3.0, "maximum": 30.0},
        "hole_clearance_mm": {"type": "number", "minimum": 0.0, "maximum": 1.0}
      }
    }
  }
}
